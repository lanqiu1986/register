<div class="col-md-12">
  <div class="post">
    <%= link_to("新增岗位", new_post_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>岗位名称</td>

      </tr>
    </thead>
    <tbody>
      <% if logged_in? %>
      <% @posts.each do |post| %>
        <tr>

          <td><%= post.name %></td>


          <td>
              <%= link_to("编辑", edit_post_path(post), class: "btn btn-sm btn-default")%>
              <%= link_to("删除", post_path(post),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
      <% else %>
      <% end %>
    </tbody>
  </table>
</div>
