<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>申请岗位</td>
        <td>姓名</td>
        <td>性别</td>
        <td>年龄</td>
        <td>出生日期</td>
        <td>初始学历</td>
        <td>初始学位</td>
        <td>初始学历毕业学校</td>
        <td>主修专业</td>
        <td>最后学历</td>
        <td>最高学位</td>
        <td>最后学历毕业学校</td>
        <td>主修专业</td>
        <td>联系电话</td>
        <td>简历</td>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @resume.post_id %></td>
          <td><%= @resume.name %></td>
          <td><%= @resume.gender %></td>
          <td><%= @resume.age %></td>
          <td><%= @resume.datebirth %></td>
          <td><%= @resume.educationfirst %></td>
          <td><%= @resume.degreefirst %></td>
          <td><%= @resume.schoolfirst %></td>
          <td><%= @resume.majorfirst %></td>
          <td><%= @resume.educationlast %></td>
          <td><%= @resume.degreelast %></td>
          <td><%= @resume.schoollast %></td>
          <td><%= @resume.majorlast %></td>
          <td><%= @resume.phonenumber %></td>
          <td>
            <% if @resume.attachment.present? %>
              已提交简历
            <% else %>
              没有提交简历
            <% end %>
          </td>
        </tr>
    </tbody>
  </table>
</div>
